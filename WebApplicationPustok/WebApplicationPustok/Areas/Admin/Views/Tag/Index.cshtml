@using WebApplicationPustok.ViewModel.TagVM;
@model List<TagListItem>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Tag</h6>
        <a href="~/Admin/Tag/Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>ProductCode</th>
                <th>Stock</th>
                <th>Brand</th>
                <th>ImageUrl</th>
                
                <th class="text-center" colspan="2">Action</th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Price</td>
                            <td>@item.ProductCode</td>
                            <td>@item.Stock</td>
                            <td>@item.Brand</td>
                            <td><img width="200px" src="@item.ImageUrl" /></td>
                           
                            <td class="text-center"><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                            <td class="text-center"><a class="btn btn-outline-info" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

